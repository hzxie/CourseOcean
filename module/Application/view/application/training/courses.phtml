    function getCourses(category, pageNumber) {
        $.ajax({
            type: 'GET',
            async: true,
            url: '<?= $this->basePath('/training/getCourses'); ?>?category=' + category + '&page=' + pageNumber,
            dataType: 'JSON',
            success: function(result) {
                $('#courses').empty();
                $('div#pagination > ul').empty();
                if ( result['isSuccessful'] ) {
                    $('.alert-warning').addClass('hide');
                    $('div#pagination').removeClass('hide');
                    displayCourses(result['courses']);
                    displayPagination(pageNumber, result['totalPages']);
                } else {
                    $('.alert-warning').removeClass('hide');
                    $('div#pagination').addClass('hide');
                }
            }
        });
    }
<?php $this->inlineScript()->captureEnd(); ?>
