    function displayCourses(courses) {
        var numberOfCourses = courses.length;
        for ( var i = 0; i < numberOfCourses; ++ i ) {
            $('#courses').append('<li class="course row-fluid">'
                                + '    <div class="span3">'
                                + '        <img src="<?= $this->basePath('/img/categories/'); ?>' + courses[i]['courseTypeSlug'] + '-small.jpg" alt="Course Image" />'
                                + '    </div>'
                                + '    <div class="span9">'
                                + '        <h4><a href="<?= $this->basePath('/training/course'); ?>?courseId=' + courses[i]['courseId'] + '">' + courses[i]['courseName'] + '</a></h4>'
                                + '        <p class="introduction">' + courses[i]['brief'] + '</p>'
                                + '        <ul class="inline meta">'
                                + '            <li><i class="fa fa-user"></i> <a href="<?= $this->basePath('/training/teacher'); ?>?teacherId=' + courses[i]['teacherId'] + '">' + courses[i]['teacherName'] + '</a></li>'
                                + '            <li><i class="fa fa-tasks"></i> ' + courses[i]['courseTypeName'] + '</li>'
                                + '        </ul>'
                                + '    </div>'
                                + '</li>');
        }
    }
