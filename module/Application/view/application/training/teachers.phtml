<script type="text/javascript">
    function getTeachers(category, pageNumber) {
        $.ajax({
            type: 'GET',
            async: true,
            url: '<?php echo $this->basePath(); ?>/training/getTeachers?category=' + category + '&page=' + pageNumber,
            dataType: 'JSON',
            success: function(result) {
                $('#teachers').empty();
                if ( result['isSuccessful'] ) {
                    $('.alert-warning').addClass('hide');
                    displayTeachers(result['teachers']);
                } else {
                    $('.alert-warning').removeClass('hide');
                }
            }
        });
    }
</script>
<script type="text/javascript">
    function displayTeachers(teachers) {
        var numberOfTeachers = teachers.length;
        for ( var i = 0; i < numberOfTeachers; ++ i ) {
            $('#teachers').append('<li class="teacher span2">'
                                + '<div class="thumbnail">'
                                + '    <div class="avatar" style="background-color: #427fed">'
                                + '       <img data-src="holder.js/150x150" src="<?php echo $this->basePath(); ?>/img/avatars/' + 
                                              ( teachers[i]['teacherAvatar'] === null ? 'silhouette.png' : teachers[i]['teacherAvatar'] ) + '" alt="Avatar" />'
                                + '    </div>' 
                                + '    <a href="<?php echo $this->basePath(); ?>/teacher/' + teachers[i]['uid'] + '">'
                                + '        <h5>' + teachers[i]['teacherName'] + '</h5>'
                                + '    </a>'
                                + '    <div class="company">' + teachers[i]['teacherCompany'] + '</div>'
                                + '    <div class="field">' + teachers[i]['teachingField'] + '</div>'
                                + '    <div class="reserve">'
                                + '        <button class="btn btn-orange btn-block" ' 
                                + '                onclick="window.location.href=\'<?php echo $this->basePath(); ?>/accounts/dashboard#requirements?teacherUid=' + teachers[i]['uid'] + '\'">' +'预约</button>'
                                + '    </div>'
                                + '</div>'
                                + '</li>');
        }
    }
</script>
<script type="text/javascript">
    $('#pagination > ul').delegate('li', 'click', function(e) {
        $('#pagination > li.active').removeClass('active');
        $(this).addClass('active');

        var category   = $('ul#course-types > li.active > a').attr('href').substring(1),
            pageNumber = $('a', this).html();
        getTeachers(category, pageNumber);
        getTotalPages(category, pageNumber);

        e.preventDefault();
    });
</script>
<script type="text/javascript">
    function getTotalPages(category, pageNumber) {
        $.ajax({
            type: 'GET',
            async: true,
            url: '<?php echo $this->basePath(); ?>/training/getTeacherTotalPages?category=' + category,
            dataType: 'JSON',
            success: function(result) {
                $('div#pagination > ul').empty();
                if ( result['isSuccessful'] ) {
                    $('div#pagination').removeClass('hide');
                    displayPagination(pageNumber, result['totalPages']);
                } else {
                    $('div#pagination').addClass('hide');
                }
            }
        });
    }
</script>
<script type="text/javascript">
    function displayPagination(currentPage, totalPages) {
        var lowerBound = ( currentPage - 5 > 0 ? currentPage - 5 : 1 ),
            upperBound = ( currentPage + 5 < totalPages ? currentPage + 5 : totalPages );
        var paginationString  = '<li' + ( currentPage > 1 ? '>' : ' class="disabled">') + '<a href="#">&lt;</a></li>';

        for ( var i = lowerBound; i <= upperBound; ++ i ) {
            paginationString += '<li' + ( currentPage == i ? ' class="active"' : '' ) + '><a href="#">' + i + '</a></li>';
        }
        paginationString     += '<li' + ( currentPage < totalPages ? '>' : ' class="disabled">') + '<a href="#">&gt;</a></li>';
        $('#pagination > ul').append(paginationString);
    }
</script>
